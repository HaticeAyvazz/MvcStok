
@{
    ViewBag.Title = "Hoş Geldiniz";
    Layout = null; 
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Giriş</title>
    <style>
        body {
            font-family: Arial;
            text-align: center;
             margin: 0;
            padding: 0;
            overflow: hidden;
            height: 100vh;
        }
        

        .button {
            padding: 10px 20px;
            background-color: #007bff;
            color: white;
            border: none;
            border-radius: 6px;
            font-size: 18px;
            cursor: pointer;
        }

       .button:hover {
         background-color: #0056b3;
         }

      .background{
          background-image:url("/Content/images/photos.jpg");
          background-size:cover;
          background-position:center;
          height:100vh;
          position:relative;
          top:0px;
      }
        .content {
            position: absolute;
            top: 50%;
            left: 50%;
            color: white;
            text-align: center;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            font-size:25px;
        }
    </style>
</head>
<body>
    <div class="background">
            <div class="content">
                <h1>Uygulamaya Hoş Geldiniz</h1>
                <p>Başlamak için aşağıdaki butona tıklayın.</p>
                <form action="/KATEGORI/Index/">
                    <button class="button" type="submit">Devam Et</button>
                </form>
            </div>
    </div>
</body>
</html>


